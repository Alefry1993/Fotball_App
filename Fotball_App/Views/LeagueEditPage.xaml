<Page
    x:Class="Fotball_App.Views.LeagueEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fotball_App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <StackPanel>
        <TextBox VerticalAlignment="Center" FontFamily="Times New Roman" PlaceholderText="Enter League Name" Text="{x:Bind LeagueEditViewModel.LeagueName, Mode=TwoWay}" Style="{ThemeResource TitleTextBlockStyle}" />
        <StackPanel Orientation="Horizontal" Padding="0,15,0,0">
            <StackPanel Padding="15,0,0,0">
                <TextBlock Text="Country" FontFamily="Times New Roman" Style="{StaticResource DetailSubTitleStyle}" />
                <TextBox Width="300" PlaceholderText="Enter Leagues Country" Text="{x:Bind LeagueEditViewModel.Country, Mode=TwoWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
            </StackPanel>
        </StackPanel>
        <TextBlock Margin="{StaticResource MediumTopMargin}" Foreground="Red" VerticalAlignment="Center" Text="{x:Bind LeagueEditViewModel.Errors, Mode=OneWay}" Style="{ThemeResource DetailBodyStyle}" />
    </StackPanel>
</Page>
